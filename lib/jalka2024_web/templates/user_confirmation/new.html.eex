<h1>Email instructions again</h1>

<%= form_for :user, Routes.user_confirmation_path(@conn, :create), fn f -> %>
  <%= label f, :email %>
  <%= email_input f, :email, required: true %>

  <div>
    <%= submit "Email instructions again" %>
  </div>
<% end %>

<p>
  <%= link "Register", to: Routes.user_registration_new_path(@conn, :new) %> |
  <%= link "Login", to: Routes.user_session_path(@conn, :new) %>
</p>
